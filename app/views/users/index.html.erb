<h1 class="font-bold text-xl">All Users</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>User Type</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.user_type.titleize %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "create user", new_user_path, class: "bg-green-500 text-white px-3 py-1 mt-3 rounded" %>
