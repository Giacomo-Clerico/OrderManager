<h1 class="font-bold text-xl">Create New User</h1>

<%= form_for @user do |f| %>
    <div>
        <%= f.label :email %><br>
        <%= f.email_field :email, required: true, class: "border rounded p-2" %>
    </div>

    <div>
        <%= f.label :user_type %><br>
        <%= f.select :user_type, User::USER_TYPES.map { |type| [type.titleize, type] }, prompt: "Select user type", required: true %>
    </div>

    <div class="bg-green-500 text-white px-3 py-1 mt-3 rounded w-fit">
        <%= f.submit "Create User" %>
    </div>
<% end %>
