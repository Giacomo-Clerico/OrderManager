<%= form_with(model: storage, class: "space-y-4") do |f| %>
    <% if storage.errors.any? %>
        <div class="p-4 mb-4 text-red-700 bg-red-100 rounded-lg">
        <h2 class="font-bold"><%= pluralize(storage.errors.count, "error") %> prohibited this storage from being saved:</h2>
        <ul class="list-disc pl-5">
            <% storage.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
        </div>
    <% end %>

    <div>
        <%= f.label :name, class: "block font-medium mb-1" %>
        <%= f.text_field :name, class: "w-full p-2 border rounded-lg" %>
    </div>

    <div>
        <%= f.label :abbreviation, class: "block font-medium mb-1" %>
        <%= f.text_field :abbreviation, class: "w-full p-2 border rounded-lg" %>
    </div>

    <div>
        <%= f.submit class: "px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700" %>
    </div>
<% end %>
