<h1 class="text-2xl font-bold mb-4">Storages</h1>

<% if %w[manager director].include?(current_user.user_type) %>
    <div class="mb-4">
        <%= link_to "New Storage", new_storage_path, class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700" %>
    </div>
    <% end %>

    <table class="min-w-full border border-gray-300 rounded-lg overflow-hidden shadow-sm">
    <thead class="bg-gray-100">
        <tr>
        <th class="px-4 py-2 text-left">Name</th>
        <th class="px-4 py-2 text-left">Abbreviation</th>
        <th class="px-4 py-2">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @storages.each do |storage| %>
        <tr class="border-t">
            <td class="px-4 py-2"><%= storage.name %></td>
            <td class="px-4 py-2"><%= storage.abbreviation %></td>
            <td class="px-4 py-2 flex gap-2">
            <%= link_to "Show", storage_path(storage), class: "text-blue-600 hover:underline" %>
            <% if %w[manager director].include?(current_user.user_type) %>
                <%= link_to "Edit", edit_storage_path(storage), class: "text-yellow-600 hover:underline" %>
                <%= button_to "Delete", storage_path(storage), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:underline" %>
            <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
