<h1 class="text-2xl font-bold mb-4">Orders</h1>

<%= link_to "New Order", new_order_path, class: "bg-purple-500 text-white px-3 py-2 mt-5 rounded hover:bg-purple-600" %>
<%= link_to "New Delivery Note", find_order_delivery_notes_path, class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>


<% @order.each do |order| %>
    <div class="border-b border-gray-200 py-4 ">
    <div class="flex items-center justify-start gap-x-4">
        <h2 class="text-lg text-blue-600 hover:underline hover:text-blue-800 cursor-pointer">
            <%= link_to order.name, order%>
        </h2>
        <p>Created by: <%= order.user.email.split("@").first %></p>
    </div>
        <%= order.created_at.strftime("%d/%m/%Y %H:%M") %>
    </div>
<% end %>
