<h1 class="font-bold text-xl pt-4">Orders</h1>

<% @order.each do |order| %>
    <div class="border-b border-gray-200 py-4 ">
    <div class="flex items-center justify-start gap-x-4">
        <h2 class="text-lg text-blue-600 hover:underline hover:text-blue-800 cursor-pointer">
            <%= link_to order.name, order%>
        </h2>
        <p>Created by: <%= order.user.email.split("@").first %></p>
    </div>
        <%= order.created_at.strftime("%d/%m/%Y %H:%M") %>
    </div>
<% end %>
