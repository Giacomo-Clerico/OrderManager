<h1 class="text-2xl font-bold mb-4">Stocks</h1>
<h3>Import Stock JSON</h3>

<div class="mb-6">
    <h3 class="text-lg font-semibold mb-2">Import Stock JSON</h3>

    <%= form_with url: import_json_stocks_path, method: :post, local: true, multipart: true, class: "flex items-center space-x-4" do |form| %>
        <%= form.file_field :file, accept: 'application/json', class: "block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 focus:outline-none" %>
        <%= form.submit "Import JSON", class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition" %>
    <% end %>
</div>


<% if %w[manager director].include?(current_user.user_type) %>
    <div class="mb-4">
        <%= link_to "New Stock", new_stock_path, class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700" %>
    </div>
<% end %>
<table class="min-w-full border border-gray-300 rounded-lg overflow-hidden shadow-sm">
    <thead class="bg-gray-100">
        <tr>
        <th class="px-4 py-2 text-left">Product</th>
        <th class="px-4 py-2 text-left">Quantity</th>
        <th class="px-4 py-2 text-left">Storage Type</th>
        <th class="px-4 py-2 text-left">Storage</th>
        <th class="px-4 py-2">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @stocks.each do |stock| %>
        <tr class="border-t">
            <td class="px-4 py-2"><%= stock.product.code %></td>
            <td class="px-4 py-2"><%= stock.quantity %></td>
            <td class="px-4 py-2">
                <% if stock.storage.present? %>
                    <%= stock.storage.try(:name) || "##{stock.storage_id}" %>
                <% else %>
                    Not assigned
                <% end %>
            </td>

            <td class="px-4 py-2 flex gap-2">
            <%= link_to "Show", stock_path(stock), class: "text-blue-600 hover:underline" %>
            <% if %w[manager director].include?(current_user.user_type) %>
                <%= link_to "Edit", edit_stock_path(stock), class: "text-yellow-600 hover:underline" %>
                <%= button_to "Delete", stock_path(stock), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:underline" %>
            <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
