<h1 class="mb-2">Add New proof of payment to order: <%= @order.name %></h1>

<%= form_with(model: @payment, url: order_quote_payments_path(@order, @quote)) do |form| %>


    <div class="mb-4">
        <%= form.label :bank, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :bank, class: "mt-1 block w-full border border-gray-300 rounded-md p-2"%>
    </div>

    <div class="mb-4">
        <%= form.label :account, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :account, class: "mt-1 block w-full border border-gray-300 rounded-md p-2"%>
    </div>

    <div class="mb-4">
        <%= form.label :body, "Body", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.rich_text_area :body, class: "trix-content border border-gray-300 rounded-md p-3 w-full focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
    </div>

    <div class="mb-4">
        <%= form.label :from_account, "From account", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :from_account, class: "mt-1 block w-full border border-gray-300 rounded-md p-2" %>
    </div>

    <div class="mb-4">
        <%= form.label :amount, "Amount", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.number_field :amount,  class: "mt-1 block w-full border border-gray-300 rounded-md p-2", min: 1 %>
    </div>
    
    <%= form.submit "Save Payment", class: "bg-green-500 text-white px-4 py-2 rounded" %>
<% end %>
